<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgSekolah"
            android:src="@drawable/kemendikbud"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNamaSekolah"
            android:layout_toEndOf="@+id/imgSekolah"
            android:layout_marginStart="10dp"
            android:textSize="24sp"
            android:text="Nama Sekolah"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNoTlp"
            android:layout_toEndOf="@+id/imgSekolah"
            android:layout_below="@id/tvNamaSekolah"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:text="0831-3391-9981"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAkreditasi"
            android:layout_below="@+id/tvNoTlp"
            android:layout_toStartOf="@id/tvAkreditasiHuruf"
            android:text="Akreditasi :"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAkreditasiHuruf"
            android:text="A"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvNoTlp"
            android:textColor="#E85322"
            android:layout_marginEnd="10dp"
            />



    </RelativeLayout>


</androidx.cardview.widget.CardView>